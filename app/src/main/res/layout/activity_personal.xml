<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".PersonalActivity"
    android:orientation="vertical"
    android:weightSum="10">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:background="@color/black">
        <ImageButton
            android:id="@+id/back1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:background="@drawable/left"
            />
        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.25"
            android:text="프로필 및 기타 설정"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_weight="1.55"
        android:layout_height="0dp">
        <androidx.cardview.widget.CardView
            app:layout_constraintHeight_percent="0.5"
            app:layout_constraintWidth_percent="0.16"
            app:layout_constraintHorizontal_bias="0.04"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent">
        <ImageButton
            android:id="@+id/person1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/grid4"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            app:layout_constraintHeight_percent="0.5"
            app:layout_constraintWidth_percent="0.16"
            app:layout_constraintHorizontal_bias="0.26"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent">
            <ImageButton
                android:id="@+id/person2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/grid3"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            app:layout_constraintHeight_percent="0.5"
            app:layout_constraintWidth_percent="0.16"
            app:layout_constraintHorizontal_bias="0.48"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent">
            <ImageButton
                android:id="@+id/person3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/grid2"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            app:layout_constraintHeight_percent="0.5"
            app:layout_constraintWidth_percent="0.16"
            app:layout_constraintHorizontal_bias="0.7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent">
            <ImageButton
                android:id="@+id/person4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/grid1"/>

        </androidx.cardview.widget.CardView>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/plus"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.7"
            app:layout_constraintHorizontal_bias="0.96"
            app:layout_constraintVertical_bias="0.4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.18">

        </ImageView>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/t1"
                android:layout_marginStart="5dp"

                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="이원영"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/t2"

                android:textAlignment="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="원영"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/t3"

                android:textAlignment="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="잭"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/t4"

                android:layout_marginRight="2dp"
                android:textAlignment="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="이원용"
                android:textColor="@color/white"/>
            <TextView
                android:layout_marginRight="14dp"
                android:textAlignment="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="프로필 추가"
                android:textColor="@color/white"/>


        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_weight="0.6"
        android:layout_height="0dp">
        <ImageView
            app:layout_constraintHeight_percent="0.6"
            app:layout_constraintWidth_percent="0.1"
            app:layout_constraintHorizontal_bias="0.35"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/pen1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            app:layout_constraintHorizontal_bias="0.53"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로필 관리"
            android:textSize="16dp"
            android:textColor="@color/white"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"/>
    <ImageButton
        android:layout_marginHorizontal="9dp"
        android:layout_weight="0.8"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@drawable/g1"/>
    <ImageButton
        android:layout_marginHorizontal="9dp"
        android:layout_weight="0.8"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@drawable/g2"/>
    <ImageButton
        android:layout_marginHorizontal="9dp"
        android:layout_weight="0.8"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@drawable/g3"/>
    <ImageButton
        android:layout_marginHorizontal="9dp"
        android:layout_weight="0.8"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@drawable/g4"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:text="로그아웃"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:textAlignment="center"></TextView>
</LinearLayout>